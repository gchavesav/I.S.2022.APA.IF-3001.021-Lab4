                     <font>
                        <Font name="Arial" size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="ageTextField" layoutX="185.0" layoutY="172.0" prefHeight="48.0" prefWidth="149.0" />
                  <Label layoutX="36.0" layoutY="220.0" text="Address:">
                     <font>
                        <Font name="Arial" size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="addressTextField" layoutX="185.0" layoutY="226.0" prefHeight="48.0" prefWidth="522.0" />
               </children>
            </Pane>
            <Pane layoutX="5.0" layoutY="386.0" prefHeight="91.0" prefWidth="740.0">
               <children>
                  <Button fx:id="btnAdd" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#btnAddOnAction" prefHeight="50.0" prefWidth="114.0" text="Add" />
                  <Button fx:id="btnClose" layoutX="612.0" layoutY="21.0" mnemonicParsing="false" onAction="#bntCloseOnAction" prefHeight="50.0" prefWidth="114.0" text="Close" />
               </children>
            </Pane>
         </children>
      </AnchorPane>
   </center>
