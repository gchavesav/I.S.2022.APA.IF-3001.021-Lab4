<BorderPane fx:id="bp" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.FXMLAddStudentController">
   <center>
      <AnchorPane id="AnchorPane" prefHeight="432.0" prefWidth="750.0">
         <children>
            <Pane prefHeight="98.0" prefWidth="749.0" style="-fx-background-color: orange;">
               <children>
                  <Label layoutX="85.0" layoutY="25.0" text="Add Student (Singly Linked List)">
                     <font>
                        <Font name="Arial" size="40.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Pane layoutX="10.0" layoutY="96.0" prefHeight="289.0" prefWidth="739.0">
               <children>
                  <Label layoutX="36.0" layoutY="34.0" text="Id:">
                     <font>
                        <Font name="Arial" size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="idTextField" layoutX="185.0" layoutY="46.0" prefHeight="48.0" prefWidth="149.0" />
                  <Label layoutX="36.0" layoutY="98.0" text="Name:">
                     <font>
                        <Font name="Arial" size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameTextField" layoutX="185.0" layoutY="110.0" prefHeight="48.0" prefWidth="449.0" />
